[user]
	email = nagarajan.ganesan@xxxx.com
	name = Nagarajan Ganesan

[core]
	editor = vim
	autocrlf = input
	safecrlf = true

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[rerere]
	enabled = true
    autoupdate = true

[alias]
    st = status -uno
    br = branch
    wow = log --all --graph --decorate --oneline --simplify-by-decoration
    fix = "!f() { ${EDITOR} `git diff --name-only`; }; f"
