[user]
	email = nagarajan.ganesan@ericsson.com
	name = Nagarajan Ganesan

[credential]
	helper = store

[core]
	editor = nvim
	autocrlf = false
	safecrlf = true

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[rerere]
	enabled = true
    autoupdate = true

[alias]
    st = status -uno
    status = status -uno
    br = branch
    wow = log --all --graph --decorate --oneline --simplify-by-decoration
    fix = "!f() { ${EDITOR} `git diff --name-only`; }; f"
    edit-unmerged = "!$EDITOR `git diff --name-only --diff-filter=U`"
    add-unmerged = "!git add `git diff --name-only --diff-filter=U`"
